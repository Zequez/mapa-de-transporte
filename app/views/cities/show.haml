#map-container
  #bus-popup-template.bus-popup
    .positioner
      %span.bus-number
      .bus-popup-arrow

  #map

  #sell-locations-marker-popup-template.sell-locations-marker-popup
    %p.location-address
      %span.label #{t "views.sell_locations_popup.address"}:
      %span.location-address-data
    %p.location-name
      %span.label #{t "views.sell_locations_popup.name"}:
      %span.location-name-data
    %p.location-info
      %span.location-info-data
    %p.location-actions
      %span.location-action-selling= t "views.sell_locations_popup.selling"
      %span.location-action-reload= t "views.sell_locations_popup.reloading"
      %span.location-action-ticket= t "views.sell_locations_popup.ticket"

  -##bus-quick-info
  -#  %h2= @city.name
  -#  = render partial: "/shared/bus-data", locals: {bus: @city, light_icons: true}
  -#  .absolute-light

#toolbar
  .padding
    #header
      %h1
        %a{href: '/', title: "Lo siento, solo Mar del Plata por ahora."}
          %image{src: "/assets/header.png", alt: t('views.buses.header.logo_title', city: @city.name)}

    #header-bar
      #toggle-help{title: t('views.buses.header_bar.help')}= t('views.buses.header_bar.help')
      - if @city.sell_points_visibility?

        #toggle-sell-locations{title: t('views.buses.header_bar.sell_locations'), class: ("toggled" if sell_points_in_url?)}
          = t('views.buses.header_bar.sell_locations')
      #city-bus-price{title: t('views.buses.header_bar.ticket_price', city: @city.name)}
        %span.bus-price-icon #{t('views.buses.header_bar.ticket_price', city: @city.name)}:
        %span.bus-price-money= monetize @city.bus_card

    .separator

    #tooltips
      - %w{map_click many_clicks remove_checkpoint move_checkpoint invert_checkpoints more_buses close_help}.each do |tooltip|
        %div{id: "tooltip-#{tooltip}"}
          = raw t("views.buses.tooltips.#{tooltip}")
      .close &times;

      .separator

    - if @bus
      = render partial: 'shared/bus_info', locals: {bus: @bus}


    = render partial: 'shared/directions'


    #buses-groups
      - @city.bus_groups.each do |bus_group|
        - if bus_group.visible_buses?
          .buses-group-container
            .bus-group.slot{id: "bus-group-#{bus_group.id}"}= bus_group.name
            .buses-container
              - bus_group.buses_batches(7) do |buses_batch|
                .buses-batch
                  .buses-batch-rail
                  .buses-batch-slots
                    - buses_batch.each do |bus|
                      - if bus
                        = render partial: 'shared/bus-link', locals: {bus: bus}

    .separator

    #facebook-like-box
      <div class="fb-like-box" data-href="#{CONFIG[:facebook_page_url]}" data-width="310" data-height="150" data-colorscheme="dark" data-show-faces="false" data-border-color="#132230" data-stream="true" data-header="false"></div>

    .separator

    #toolbar-google-adsense
      %p.ad-notice= t('views.toolbar.ads')
      .ad-container
        <script type="text/javascript"><!--
        google_ad_client = "ca-pub-1533958540786809";
        /* MapaDeColectivosToolbar */
        google_ad_slot = "1317037293";
        google_ad_width = 250;
        google_ad_height = 250;
        //-->
        </script>
        <script type="text/javascript"
        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
        </script>

      
    .separator


    #copyright{title: t('views.toolbar.copyright.title')}
      %p= t('views.toolbar.copyright.first_line')
      %p= t('views.toolbar.copyright.second_line')
      %p!= t('views.toolbar.copyright.third_line')

#feedback
  #feedback-paledator
  #feedback-button= t "views.feedback.button"
  #feedback-padding
    = render template: "feedbacks/new"
    
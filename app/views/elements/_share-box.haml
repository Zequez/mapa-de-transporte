- share_facebook = "https://www.facebook.com/sharer.php?u=#{u current_city_url}&t=#{u city_title}"
- share_twitter  = "https://twitter.com/intent/tweet?text=#{u city_title}&url=#{u current_city_url}%2F&via=#{CONFIG[:twitter_user]}"
- share_google   = "https://plus.google.com/share?url=#{u current_city_url}"

#share-box.barsection
  .separator
  %h3.barsection-title= t("views.share_box.share")
  #share-buttons
    #share-facebook
      =share_button t("views.share_box.share_facebook"), share_facebook
    #share-twitter
      =share_button t("views.share_box.share_twitter"), share_twitter
    #share-google
      =share_button t("views.share_box.share_google"), share_google

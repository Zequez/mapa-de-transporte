.separator
#bus-info.toggleable.toggled
  -#.bus-info{id: "bus-info-#{bus.id}"}
  %div{title: t("views.buses.bus_info.line_toggle", bus: bus.name)}
    = toolbar_toggler
    %h2
      = bus.name

  -#= render partial: "/shared/bus-data", locals: {bus: bus}
  -#.bus-pictures
  .bus-routes
    - if bus.circular_route?
      - if bus.route
        .bus-departure-route
          %span{title: t("views.buses.bus_info.departure_return_route")} #{t("views.buses.bus_info.departure_return")}:
          != bus.route.formatted_addresses
    - else
      - if bus.departure_route
        .bus-departure-route
          %span{title: t("views.buses.bus_info.departure_route")} #{t "views.buses.bus_info.departure"}:
          != bus.departure_route.formatted_addresses
      - if bus.return_route
        .bus-return-route
          %span{title: t("views.buses.bus_info.return_route")} #{t "views.buses.bus_info.return"}:
          != bus.return_route.formatted_addresses
